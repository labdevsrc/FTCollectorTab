<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:local="clr-namespace:FTCollectorApp.Utils;assembly=FTCollectorApp"
             xmlns:forms="clr-namespace:SignaturePad.Forms;assembly=SignaturePad.Forms"              
             xmlns:fa="clr-namespace:FontAwesome" 
             Shell.NavBarIsVisible="False"
             x:Class="FTCollectorApp.View.VerifyJobPage">
    <ContentPage.Content>
        
        <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="CenterAndExpand" >

            <StackLayout Orientation="Vertical" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
                <StackLayout Padding="50" >
                    <Grid RowDefinitions="*,*" ColumnDefinitions="*,*,*,*,*">
                        <StackLayout Orientation="Vertical" HeightRequest="110">
                            <Button Text="{x:Static fa:FontAwesomeIcons.User}" FontSize="40"
                                        FontFamily="FontAwesome6Solid" HeightRequest="90" WidthRequest="90" 
                                    Command="{Binding ToggleJobEntriesCommand}" />

                            <Label HorizontalOptions="Center" Text="Verify Job"/>
                        </StackLayout>
                        <StackLayout Grid.Column="1" Orientation="Vertical" HeightRequest="110">                        
                            <Button Text="{x:Static fa:FontAwesomeIcons.Users}" FontSize="40"
                                           FontFamily="FontAwesome6Solid" HeightRequest="90" WidthRequest="90" Command="{Binding ToggleCrewListCommand}" />

                            <Label HorizontalOptions="Center" Text="Enter Crew"/>
                        </StackLayout>

                        <!--Equipment Checkout-->
                        <StackLayout Grid.Column="2" Orientation="Vertical" HeightRequest="110">
                            <Button Text="{x:Static fa:FontAwesomeIcons.UserGear}" FontSize="40"
                                       FontFamily="FontAwesome6Solid" HeightRequest="90" WidthRequest="90" Command="{Binding DisplayEquipmentCheckOutCommand}" />
                            <Label HorizontalOptions="Center" Text="Eq. Checkout"/>
                        </StackLayout>
                        <!--Equipment Checkin-->
                        <StackLayout Grid.Column="3" Orientation="Vertical" HeightRequest="110">
                            <Button Text="{x:Static fa:FontAwesomeIcons.Gears}" FontSize="40"
                                       FontFamily="FontAwesome6Solid" HeightRequest="90" WidthRequest="90" Command="{Binding DisplayEquipmentCheckInCommand}" />                        
                            <Label HorizontalOptions="Center" Text="Eq. Checkin"/>
                        </StackLayout>
                        <!--Odometer-->
                        <StackLayout Grid.Column="4" Orientation="Vertical" HeightRequest="110">

                            <Button Text="{x:Static fa:FontAwesomeIcons.GaugeHigh}" FontSize="40"
                                       FontFamily="FontAwesome6Solid" HeightRequest="90" WidthRequest="90" Command="{Binding ODOPopupCommand}" />
                            <Label HorizontalOptions="Center" Text="Odometer In"/>
                        </StackLayout>
                        
                        <!-- 2nd row -->
                        <StackLayout Grid.Row="1" Grid.Column="0" IsVisible="{Binding IsVerified}"
                                        Orientation="Vertical" HeightRequest="100">
                            <Button Text="Lunch Out" FontSize="Small" HeightRequest="90" WidthRequest="90" 
                                        Command="{Binding LunchOutCommand}" />
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="2" IsVisible="{Binding IsVerified}" 
                                     Orientation="Vertical" HeightRequest="100">
                            <Button Text="Lunch In" FontSize="Small" IsEnabled="False"
                                HeightRequest="90" WidthRequest="120" Command="{Binding LunchInCommand}" />
                        </StackLayout>

                        <StackLayout Grid.Row="1" Grid.Column="1" IsVisible="{Binding IsVerified}" 
                                     Orientation="Vertical" HeightRequest="100">
                            <Button Text="End of Day" FontSize="Small"
                                    FontFamily="FontAwesome6Solid" HeightRequest="90" WidthRequest="120" 
                                    Command="{Binding ToggleEndofDayCommand}" />
                        </StackLayout>

                        <!--Func#1-->

                        <StackLayout Grid.Row="1" Grid.Column="3" Orientation="Vertical" IsVisible="{Binding IsVerified}"
                                     HeightRequest="110">
                            <Button Text="Func#2" FontSize="Medium" IsEnabled="False"
                                HeightRequest="90" WidthRequest="120"  />
                        </StackLayout>
                        <StackLayout Grid.Row="1" Grid.Column="4" Orientation="Vertical" IsVisible="{Binding IsVerified}"
                                     HeightRequest="110">
                            <Button Text="Func#3" FontSize="Medium" IsEnabled="False"
                                HeightRequest="90" WidthRequest="120"  />
                        </StackLayout>

                    </Grid>
                    
                    <!-- Verify Job Detail Entries -->                    
                    <StackLayout Padding="20" IsVisible="{Binding IsDisplayJobEntries}" >
                        <Label Text="Verify Job" FontSize="30"  HorizontalOptions="Center"/>
                        <Label Text="Owner*"/>
                        <Picker ItemsSource="{Binding OwnerList}" ItemDisplayBinding="{Binding OwnerName}" 
                                SelectedItem="{Binding SelectedOwner, Mode=TwoWay}" TextColor="Black" />
                        <Label Text="Job Number*"/>
                        <Picker ItemsSource="{Binding JobNumbers}" ItemDisplayBinding="{Binding JobNumber}" 
                                SelectedItem="{Binding SelectedJob, Mode=TwoWay}" TextColor="Black" />
                        <Label Text="Job Location *"/>
                        <local:BorderColorEntry Text="{Binding SelectedJob.JobLocation}"   IsEnabled="False"/>
                        <Label Text="Contact Name *"/>
                        <local:BorderColorEntry Text="{Binding SelectedJob.ContactName}"   IsEnabled="False"/>
                        <Label Text="Customer Name *"/>
                        <local:BorderColorEntry x:Name="custName" Text="{Binding SelectedJob.CustomerName}" IsEnabled="False"/>
                        <Label Text="Phone *"/>
                        <local:BorderColorEntry Text="{Binding SelectedJob.CustomerPhone}"  IsEnabled="True"/>
                        <Button Text="{Binding TextStatus, Mode=TwoWay}" HorizontalOptions="EndAndExpand" BackgroundColor="{StaticResource blueColor}"
                    Command="{Binding ContinueCommand}"/>
                    </StackLayout>

                    <!-- Odometer Detail Entries -->
                    <Grid ColumnDefinitions="2*,5*,2*" IsVisible="{Binding IsDisplayOdo}" Padding="40">
                        <Label FontSize="Large"  HorizontalOptions="Start" Text="Odometer:" VerticalOptions="Center"/>
                        <Entry FontSize="Large"  VerticalOptions="Center" Grid.Column="1" Text="{Binding EntryOdometer, Mode=TwoWay}"  Keyboard="Numeric" />
                        <Button Grid.Column="2" Text="Save" VerticalOptions="Center" Command="{Binding ODOSaveCommand} "/>
                    </Grid>

                    <StackLayout IsVisible="{Binding IsDisplayEndOfDay}"  >
                        <ListView  ItemsSource ="{Binding FinishDayList}" 
                              SelectedItem="{Binding SelectedCrewForEndOfDay, Mode=TwoWay}"
                                   HeightRequest="100"
                                   >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding FullName}" Height="40">
                                    <!--<Frame Margin="20" CornerRadius="10" BackgroundColor="Blue"/>                                    
                                      <Label Text="{Binding FullName}" FontSize="50" />
                                    </Frame>-->
                                </TextCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    </StackLayout>
                    <!-- End of Day -->
                    <StackLayout  Margin="5"  IsVisible="{Binding IsDisplayEndOfDayForm}" >
                        
                        <Label Text="By signing this daily time report, I verify that my individual hours are correctly reported,and I also acknowledge that I have not been involved in a vehicle accident, incident or work related injury
                               during this work period. 
                               I understand that falsification of any information or making false statements will be considered grounds for dismissal." 
                            VerticalOptions="CenterAndExpand" 
                            HorizontalOptions="CenterAndExpand" />
                        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*,*"  Padding="20">
                            <Label  Text="Clock in time" HorizontalOptions="Start" HeightRequest="80" VerticalOptions="Center" />
                            <Entry Grid.Row="0" Grid.Column="1" Text="{Binding ClockIntime}" VerticalOptions="Center" IsEnabled="False" />
                            <Label Grid.Row="1" Grid.Column="0" Text="Lunch out time" HorizontalOptions="Start" HeightRequest="80" VerticalOptions="Center" />
                            <Entry Grid.Row="1" Grid.Column="1" Text="{Binding LunchOutTime}" IsEnabled="False" VerticalOptions="Center"/>
                            <Label Grid.Row="2" Grid.Column="0" Text="Lunch in time" HorizontalOptions="Start" HeightRequest="80" VerticalOptions="Center" />
                            <Entry Grid.Row="2" Grid.Column="1" Text="{Binding LunchInTime}" IsEnabled="False" VerticalOptions="Center"/>
                            <Label Grid.Row="3" Grid.Column="0" Text="Clock out time" HorizontalOptions="Start" HeightRequest="80" VerticalOptions="Center" />
                            <Entry Grid.Row="3" Grid.Column="1" Text="{Binding ClockOutTime}" IsEnabled="False" VerticalOptions="Center"/>
                            <Label Grid.Row="4" Grid.Column="0" Text="Total Hours for Today" HorizontalOptions="Start" HeightRequest="80" VerticalOptions="Center" />
                            <Entry Grid.Row="4" Grid.Column="1" Text="{Binding TotalHoursForToday}" IsEnabled="False" />
                        </Grid>
                        <Label Text="{Binding SelectedCrewForEndOfDay.FullName, StringFormat= 'Selected : Employee Name {0}'}" />
                        <Frame HeightRequest="120" CornerRadius="15">                        
                            <forms:SignaturePadView x:Name="signaturePad"  BackgroundImage="sign_bg.png"
                            BackgroundColor="LightGray"  StrokeColor="Black"  StrokeWidth="3" />
                        </Frame>

                        <Button Text="Save" Command="{Binding SaveEndOfDayCommand}" HorizontalOptions="End" 
                                WidthRequest="100" HeightRequest="40"/>
                    </StackLayout>
                    <!--<Button Text="Crew List" Command="{Binding ToggleCrewListCommand}"/>-->
                    <StackLayout IsVisible="{Binding IsDisplayCrewList}">
                        <Frame CornerRadius="5" HasShadow="true" HeightRequest="50">
                            <Label FontSize="20" Text="Select Crew" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                        </Frame>
                        <Label Text="{Binding CrewLeader , StringFormat='Crew Leader : {0}'}" 
                                    VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
                        <Grid Padding="5" ColumnDefinitions="*,*,*,*,*" RowDefinitions="*,*,*,*,*,*,*,*">
                            <!-- table header -->
                            <Frame  Grid.Row="0" CornerRadius="10" > 
                                <Label Text="Employee" VerticalOptions="Center" HeightRequest="40"/>
                            </Frame>
                            <Frame Grid.Row="0"  Grid.Column="1"  CornerRadius="10" >
                                <Label Text="Labor Class" VerticalOptions="Center" HeightRequest="40"/>
                            </Frame>
                            <Frame Grid.Row="0"  Grid.Column="2" CornerRadius="10">
                                <Label Text="DRIVER" VerticalOptions="Center" HeightRequest="40"/>
                            </Frame>
                            <Frame Grid.Row="0"  Grid.Column="3" CornerRadius="10" >
                                <Label  Text="Start Time" VerticalOptions="Center" HeightRequest="40"/>
                            </Frame>
                            <Frame Grid.Row="0"  Grid.Column="4"  CornerRadius="10">
                                <Label Text="Per Diem" VerticalOptions="Center" HeightRequest="40"/>
                            </Frame>
                            <!--<BoxView Grid.Row="1" Grid.ColumnSpan="5"  Color="Gray" HeightRequest="2" HorizontalOptions="Fill" />-->
                            <!-- crew leader -->
                            <Label Grid.Row="1" Grid.Column="0" Text="{Binding CrewLeader, StringFormat='{0} [L]'}" 
                                   VerticalOptions="Center" TextColor="Black" />
                            <Entry   Grid.Row="1" Grid.Column="3" Text="{Binding StartTimeLeader,Mode=TwoWay}" />

                            <!-- start employee 1 row -->
                            <!--<Label Grid.Row="2" Grid.Column="0" Text="{Binding Employee1Name.FullName}"
                                   VerticalOptions="Center" TextColor="Black" />-->
                            <Picker Grid.Row="2" Grid.Column="0" 
                                    ItemsSource="{Binding SelectableCrewList}"
                                    SelectedItem="{Binding Employee1Name,Mode=TwoWay}"
                                    ItemDisplayBinding="{Binding FullName}"
                                    Title="Employee" FontSize="Small" TextColor="Black">

                            </Picker>
                            <Picker  Grid.Row="2" Grid.Column="1" Title="Labor" 
                                     SelectedItem="{Binding Employee1Labor,Mode=TwoWay}" 
                                     TextColor="Black" >
                                <Picker.Items>
                                    <x:String>Installer</x:String>
                                    <x:String>Technician</x:String>
                                    <x:String>CADD operator</x:String>
                                    <x:String>RCDD</x:String>
                                    <x:String>Designer</x:String>
                                </Picker.Items>
                            </Picker>

                            <Picker  Grid.Row="2" Grid.Column="2"  SelectedIndex ="{Binding Employee1IsDriver,Mode=TwoWay}"
                                     Title="Driver" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>Passenger</x:String>                                    
                                    <x:String>Driver</x:String>

                                </Picker.Items>
                            </Picker>
                            <Entry   Grid.Row="2" Grid.Column="3" Text="{Binding StartTimeEmp1,Mode=TwoWay}" />
                            <Picker  Grid.Row="2" Grid.Column="4"  SelectedItem="{Binding PerDiemEmp1,Mode=TwoWay}"
                                     Title="No per diem" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>No per diem</x:String>
                                    <x:String>Full day per diem</x:String>
                                    <x:String>Half day per diem</x:String>                                    
                                </Picker.Items>
                            </Picker>



                            <!-- start employee 2 row -->
                            <Picker Grid.Row="3" Grid.Column="0" Title="Select Employee" 
                                   ItemsSource="{Binding SelectableCrewList}"
                                   SelectedItem="{Binding Employee2Name,Mode=TwoWay}"
                                   ItemDisplayBinding="{Binding FullName}"
                                    
                                    FontSize="Small" TextColor="Black"/>
                            <Picker Grid.Row="3" Grid.Column="1" SelectedItem="{Binding Employee2Labor,Mode=TwoWay}" 
                                    Title="Select labor" TextColor="Black" 
                                    >
                                <Picker.Items>
                                    <x:String>Installer</x:String>
                                    <x:String>Technician</x:String>
                                    <x:String>CADD operator</x:String>
                                    <x:String>RCDD</x:String>
                                    <x:String>Designer</x:String>
                                </Picker.Items>
                            </Picker>
                            <Picker Grid.Row="3" Grid.Column="2" SelectedIndex ="{Binding Employee2IsDriver,Mode=TwoWay}"
                                    Title="Passenger"  TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>Passenger</x:String>
                                    <x:String>Driver</x:String>
                                </Picker.Items>
                            </Picker>
                            <Entry   Grid.Row="3" Grid.Column="3" Text="{Binding StartTimeEmp2,Mode=TwoWay}" />
                            <Picker  Grid.Row="3" Grid.Column="4"  SelectedIndex ="{Binding PerDiemEmp2,Mode=TwoWay}"
                                     Title="No per diem" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>No per diem</x:String>
                                    <x:String>Full day per diem</x:String>
                                    <x:String>Half day per diem</x:String>
                                </Picker.Items>
                            </Picker>


                            <!-- start employee 3 row -->
                            <Picker Grid.Row="4" Grid.Column="0" 
                                   ItemsSource="{Binding SelectableCrewList}"
                                   SelectedItem="{Binding Employee3Name,Mode=TwoWay}"
                                   ItemDisplayBinding="{Binding FullName}"
                                    Title="Select Employee" FontSize="Small" TextColor="Black" />
                            <Picker Grid.Row="4" Grid.Column="1" SelectedItem="{Binding Employee3Labor,Mode=TwoWay}" 
                                    Title="Select labor" TextColor="Black">
                                <Picker.Items>
                                    <x:String>Installer</x:String>
                                    <x:String>Technician</x:String>
                                    <x:String>CADD operator</x:String>
                                    <x:String>RCDD</x:String>
                                    <x:String>Designer</x:String>
                                </Picker.Items>
                            </Picker>
                            <Picker Grid.Row="4" Grid.Column="2"  SelectedIndex ="{Binding Employee3IsDriver,Mode=TwoWay}" 
                                    Title="Passenger" TextColor="Black" >
                                <Picker.Items>
                                    <x:String>Passenger</x:String>
                                    <x:String>Driver</x:String>
                                </Picker.Items>
                            </Picker>
                            <Entry Grid.Row="4" Grid.Column="3" Text="{Binding StartTimeEmp3,Mode=TwoWay}" />
                            <Picker  Grid.Row="4" Grid.Column="4"  SelectedIndex="{Binding PerDiemEmp3,Mode=TwoWay}"
                                     Title="No per diem" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>No per diem</x:String>
                                    <x:String>Full day per diem</x:String>
                                    <x:String>Half day per diem</x:String>
                                </Picker.Items>
                            </Picker>

                            <!-- start employee 4 row -->
                            <Picker Grid.Row="5" Grid.Column="0" 
                                   ItemsSource="{Binding SelectableCrewList}"
                                   SelectedItem="{Binding Employee4Name,Mode=TwoWay}"
                                   ItemDisplayBinding="{Binding FullName}"
                                    Title="Select Employee" FontSize="Small" TextColor="Black" />
                            <Picker Grid.Row="5" Grid.Column="1" SelectedItem="{Binding Employee4Labor,Mode=TwoWay}" 
                                    Title="Select labor" TextColor="Black" >
                                <Picker.Items>
                                    <x:String>Installer</x:String>
                                    <x:String>Technician</x:String>
                                    <x:String>CADD operator</x:String>
                                    <x:String>RCDD</x:String>
                                    <x:String>Designer</x:String>
                                </Picker.Items>
                            </Picker>
                            <Picker Grid.Row="5" Grid.Column="2"  SelectedIndex ="{Binding Employee4IsDriver,Mode=TwoWay}" 
                                    Title="Passenger" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>Passenger</x:String>
                                    <x:String>Driver</x:String>
                                </Picker.Items>
                            </Picker>
                            <Entry   Grid.Row="5" Grid.Column="3" Text="{Binding StartTimeEmp4,Mode=TwoWay}" />
                            <Picker  Grid.Row="5" Grid.Column="4"  SelectedIndex="{Binding PerDiemEmp4,Mode=TwoWay}"
                                     Title="No per diem" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>No per diem</x:String>
                                    <x:String>Full day per diem</x:String>
                                    <x:String>Half day per diem</x:String>
                                </Picker.Items>
                            </Picker>
                            <!-- start employee 5th row -->
                            <Picker Grid.Row="6" Grid.Column="0" 
                                   ItemsSource="{Binding SelectableCrewList}"
                                   SelectedItem="{Binding Employee5Name,Mode=TwoWay}"
                                   ItemDisplayBinding="{Binding FullName}"
                                    
                                    Title="Select Employee" FontSize="Small" TextColor="Black" />
                            <Picker Grid.Row="6" Grid.Column="1" SelectedItem="{Binding Employee5Labor,Mode=TwoWay}"
                                    Title="Select labor" TextColor="Black">
                                <Picker.Items>
                                    <x:String>Installer</x:String>
                                    <x:String>Technician</x:String>
                                    <x:String>CADD operator</x:String>
                                    <x:String>RCDD</x:String>
                                    <x:String>Designer</x:String>
                                </Picker.Items>
                            </Picker>
                            <Picker Grid.Row="6" Grid.Column="2"  SelectedIndex ="{Binding Employee5IsDriver,Mode=TwoWay}"
                                    Title="Passenger" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>Passenger</x:String>
                                    <x:String>Driver</x:String>
                                </Picker.Items>
                            </Picker>
                            <Entry   Grid.Row="6" Grid.Column="3" Text="{Binding StartTimeEmp5,Mode=TwoWay}" />
                            <Picker  Grid.Row="6" Grid.Column="4"  
                                     SelectedIndex="{Binding PerDiemEmp5,Mode=TwoWay}"
                                     Title="No per diem" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>No per diem</x:String>
                                    <x:String>Full day per diem</x:String>
                                    <x:String>Half day per diem</x:String>
                                </Picker.Items>
                            </Picker>

                            <!-- start employee 6th row -->
                            <Picker Grid.Row="7" Grid.Column="0" 
                                   ItemsSource="{Binding SelectableCrewList}"
                                   SelectedItem="{Binding Employee6Name,Mode=TwoWay}"
                                   ItemDisplayBinding="{Binding FullName}"
                                    
                                    Title="Select Employee" FontSize="Small" TextColor="Black" />
                            <Picker Grid.Row="7" Grid.Column="1" SelectedItem="{Binding Employee6Labor,Mode=TwoWay}"
                                    Title="Select labor" TextColor="Black">
                                <Picker.Items>
                                    <x:String>Installer</x:String>
                                    <x:String>Technician</x:String>
                                    <x:String>CADD operator</x:String>
                                    <x:String>RCDD</x:String>
                                    <x:String>Designer</x:String>
                                </Picker.Items>
                            </Picker>
                            <Picker Grid.Row="7" Grid.Column="2"  SelectedIndex ="{Binding Employee6IsDriver,Mode=TwoWay}"
                                    Title="Passenger" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>Passenger</x:String>
                                    <x:String>Driver</x:String>
                                </Picker.Items>
                            </Picker>
                            <Entry   Grid.Row="7" Grid.Column="3" Text="{Binding StartTimeEmp6,Mode=TwoWay}" />
                            <Picker  Grid.Row="7" Grid.Column="4"  
                                     SelectedIndex="{Binding PerDiemEmp6,Mode=TwoWay}"
                                     Title="No per diem" TextColor="Black"  >
                                <Picker.Items>
                                    <x:String>No per diem</x:String>
                                    <x:String>Full day per diem</x:String>
                                    <x:String>Half day per diem</x:String>
                                </Picker.Items>
                            </Picker>

                        </Grid>
                        <StackLayout IsVisible="{Binding IsLunchOutDisplay}" >
                            <Frame CornerRadius="20" HasShadow="True" HeightRequest="200">
                                <StackLayout>
                                    <Label FontSize="Medium" Text="LunchOut Time" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
                                    <Label FontSize="Medium" Text="{Binding LunchOutTime}" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>

                        <StackLayout IsVisible="{Binding IsLunchInDisplay}" >
                            <Frame CornerRadius="20" HasShadow="True" HeightRequest="200">
                                <StackLayout>
                                    <Label FontSize="Medium" Text="LunchIn Time" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
                                    <Label FontSize="Medium" Text="{Binding LunchInTime}" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>

                        <Button Text="Save" Command="{Binding CrewSaveCommand}" BackgroundColor="{StaticResource blueColor}"/>

                    </StackLayout>

                <!--<Button Text="Equipment CheckOut" Command="{Binding DisplayEquipmentCheckOutCommand}" />
                <Button Text="Equipment CheckIn"  Command="{Binding DisplayEquipmentCheckInCommand}"/>
                <Button Text="Odometer Input" Command="{Binding ODOPopupCommand}"/>-->

            </StackLayout>

            </StackLayout>

        <StackLayout IsVisible="{Binding IsBusy}" Padding="12"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                 AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1">

            <ActivityIndicator IsRunning="{Binding IsBusy}" Color ="{StaticResource blueColor}"/>

            <Label Text="Loading..." HorizontalOptions="Center" TextColor="White"/>

        </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>